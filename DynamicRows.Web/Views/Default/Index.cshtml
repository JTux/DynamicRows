@model IEnumerable<DynamicRows.Web.Models.DefaultListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemCount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemCount)
            </td>
            <td>
                <div class="pull-right">
                    @Html.ActionLink("Add Items", "AddItems", new { id = item.Id }, new { @class = "btn btn-sm btn-success" })
                    @Html.ActionLink("Details", "Detail", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                </div>
            </td>
        </tr>
    }

</table>
