@model DynamicRows.Web.Models.DefaultCreate

@{
    ViewBag.Title = "Create";
}

<h2>Create Form</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", style="max-width: 100%;" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="table-bordered text-uppercase" style="padding: 1rem; border-radius: 1rem;">
            <h3 class="text-center" style="margin-top: 0;">Items</h3>
            <hr />

            <div class="form-group">
                <div class="col-md-12 text-right">
                    <button id="add" type="button" class="btn btn-success text-uppercase" style="font-weight: bold;">+ Add Item</button>
                </div>
            </div>

            <table id="itemTable" class="table table-bordered">
                <thead style="font-weight: bold;">
                    <tr class="text-center">
                        <td>Name</td>
                        <td>Number</td>
                    </tr>
                </thead>
            </table>
        </div>

        <div class="form-group" style="margin-top: 1rem;">
            <div class="col-md-12 text-right">
                <input type="submit" value="Create" class="btn btn-primary text-uppercase" style="font-weight: bold;" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript">
    var counter = 0;
    $(function () {
        $('#add').click(function () {
            $('<tr id="tablerow' + counter + '"><td>' +
                '<input type="text" class="form-control" style="max-width: 100%;" name="Items[' + counter + '].Name" value="" required="required" />' +
                '</td>' +
                '<td>' +
                '<input type="number" class="form-control" style="max-width: 100%;" name="Items[' + counter + '].Number" value="" required="required" />' +
                '</td>' +
                '</tr>').appendTo('#itemTable');
            counter++;
            return false;
        });
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
