@model DynamicRows.Web.Models.DefaultItemCreate

@{
    ViewBag.Title = "AddItems";
}

<h2 class="text-center">@Model.Name</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Partial("_ItemCreatePartial")
        <div class="form-group" style="margin-top: 1rem;">
            <div class="col-md-12 text-right">
                <input type="submit" value="Create" class="btn btn-primary text-uppercase" style="font-weight: bold;" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Details", "Detail", new { id = Model.Id }, new { @class = "btn btn-sm btn-primary" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
